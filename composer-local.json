{
  "minimum-stability": "dev",
  "require": {
    "wikimedia/composer-merge-plugin": "dev-master",
    "craftcms/craft": "^2.0"
  },
  "repositories": [],
  "extra": {
    "merge-plugin": {
      "include": [
        "composer.json"
      ],
      "recurse": true,
      "replace": false,
      "ignore-duplicates": true,
      "merge-dev": true,
      "merge-extra": true,
      "merge-extra-deep": true,
      "merge-scripts": false
    }
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true,
      "wikimedia/composer-merge-plugin": true
    }
  }
}
